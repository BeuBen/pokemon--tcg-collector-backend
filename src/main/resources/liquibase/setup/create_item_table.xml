<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet author="BeuBen" id="create-item-table">
    <preConditions>
      <and>
        <not>
          <tableExists tableName="item"/>
        </not>
        <tableExists tableName="collector"/>
        <tableExists tableName="item_type"/>
        <tableExists tableName="condition"/>
      </and>
    </preConditions>
    <createTable tableName="item">
      <column name="id" type="bigserial" autoIncrement="true">
        <constraints
            nullable="false"
            primaryKey="true"
            primaryKeyName="item_pkey"/>
      </column>
      <column name="collector_id" type="bigint">
        <constraints
            nullable="false"
            references="collector(id)"
            foreignKeyName="fk_item_collector"/>
      </column>
      <column name="label" type="varchar(100)">
        <constraints nullable="false"/>
      </column>
      <column name="item_type_id" type="bigint">
        <constraints
            nullable="false"
            references="item_type(id)"
            foreignKeyName="fk_item_item_type"/>
      </column>
      <column name="condition_id" type="bigint">
        <constraints
            nullable="false"
            references="condition(id)"
            foreignKeyName="fk_item_condition"/>
      </column>
      <column name="estimation_euros" type="decimal(10,2)">
        <constraints nullable="false"/>
      </column>
      <column name="estimation_date" type="timestamp">
        <constraints nullable="false"/>
      </column>
      <column name="estimation_source_url" type="varchar(200)">
        <constraints nullable="true"/>
      </column>
      <column name="pictures_url" type="varchar(200)">
        <constraints nullable="false"/>
      </column>
      <column name="comment" type="varchar(200)">
        <constraints nullable="true"/>
      </column>
      <column name="creation_date" type="timestamp">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>