<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet author="BeuBen" id="create-goodies-table">
    <preConditions>
      <and>
        <not>
          <tableExists tableName="goodies"/>
        </not>
        <tableExists tableName="item"/>
      </and>
    </preConditions>
    <createTable tableName="goodies">
      <column name="item_id" type="bigint">
        <constraints
            primaryKey="true"
            references="item(id)"
            foreignKeyName="fk_goodies_item"/>
      </column>
      <column name="goodies_type" type="varchar(20)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>