<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet author="BeuBen" id="create-language-table">
    <preConditions>
      <not>
        <tableExists tableName="language"/>
      </not>
    </preConditions>
    <createTable tableName="language">
      <column name="id" type="bigserial" autoIncrement="true">
        <constraints
            nullable="false"
            primaryKey="true"
            primaryKeyName="language_pkey"/>
      </column>
      <column name="label" type="varchar(30)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="BeuBen" id="populate-language-table">
    <preConditions>
      <tableExists tableName="language"/>
    </preConditions>
    <loadData
        file="/liquibase/setup/data/languages.csv"
        tableName="language"
        encoding="UTF-8">
      <column name="label"/>
    </loadData>
  </changeSet>
</databaseChangeLog>